<body style="background-color:DarkGrey ;">
<% I18n.locale = @language%>
<div class="w3-card-4">
  <div class="w3-container w3-brown">
    <h2><%=I18n.t("changePassword") %></h2>
  </div>
<form action=<%="/newPassword/" + @receiveID.to_s %> onsubmit="return checkPasswords()" method="post" enctype="multipart/form-data">
    <p>      
    <label class="w3-label w3-text-brown"><b><%=I18n.t("Password") %></b></label>
    <input class="w3-input w3-border w3-sand" id="1" name="password" type="password" onkeyup="checkPasswords()" required="true"></p>
    <p>      
    <label class="w3-label w3-text-brown"><b><%=I18n.t("repeat password") %></b></label>
    <input class="w3-input w3-border w3-sand" id="2" name="password2" type="password" onkeyup="checkPasswords()" required="true"></p>
    <p id='massage' ></p>
    <center><button type="submit" class="w3-btn w3-brown"><%=I18n.t("send") %></button></center>
  </form>
</div>


