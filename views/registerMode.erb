<body style="background-color:DarkGrey ;">
<% I18n.locale = @language%>

<% if flash[:success] %>
    <p class="bg-success"><%= flash[:success] %></p>
<% end %>

<% if flash[:error] %>
    <p class="bg-danger"><%= flash[:error] %></p>
<% end %>

<div class="w3-card-4">
  <div class="w3-container w3-brown">
    <h2><%=I18n.t("create account") %></h2>
  </div>
 <form action="/createProfile" method="post" enctype="multipart/form-data">
    <p>      
    <label class="w3-label w3-text-brown"><b><%=I18n.t("Username") %></b></label>
    <input class="w3-input w3-border w3-sand" name="username" type="text"></p>
    <p>      
    <label class="w3-label w3-text-brown"><b><%=I18n.t("Password") %></b></label>
    <input class="w3-input w3-border w3-sand" name="password" type="password"></p>
    <p>
    <center><button type="submit" class="w3-btn w3-brown"><%=I18n.t("create") %></button></center></p>
  </form>
</div>